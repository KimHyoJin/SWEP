    <script type="text/javascript">
      function poll() {
        $.ajax({
          url: '/receivechat',
          method: 'post',
          success: function(data) {
            if (data.received) {
              $('#startchat').css('display', 'block');
              $('#startchat').html("<a href='https://52.34.154.77/chatroom'> " +"<font color=white size=3 >"+data.sender+"</font>"+"님이 채팅을 요청을 보냈습니다." + "</a>" );
            }
          }
        })
      }
      var timer = window.setInterval(function() {poll();}, 1000);
